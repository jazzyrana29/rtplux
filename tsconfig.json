{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/games/*": [
        "./games/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/store/*": [
        "./store/*"
      ],
      "@/types/*": [
        "./types/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}